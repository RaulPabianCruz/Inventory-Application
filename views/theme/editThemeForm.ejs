<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/headerStyles.css">
        <link rel="stylesheet" href="/themeFormStyles.css">
    </head>
    <body>
        <%- include('../partials/header.ejs') %>
        <main>
            <h1 class="title"><%= title %></h1>
            <%- include('../partials/errors.ejs') %>
            <form action="/<%=theme.id%>/update" method="post" class="form">
                <label for="theme" class="form label">Theme Name</label>
                <input type="text" name="theme" id="theme" minlength="1" maxlength="25" value="<%=theme.name%>" required class="form input">
                <button type="submit" class="form bttn">Update</button>
            </form>
            <a href="/" class="back-lnk">Back</a>
        </main>
    </body>
</html>