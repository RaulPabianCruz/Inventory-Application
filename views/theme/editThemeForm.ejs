<html>
    <head>
        <title><%=title%></title>
    </head>
    <body>
        <h1><%=title%></h1>
        <form action="/<%=theme.id%>/update" method="post">
            <label for="theme">Theme Name</label>
            <input type="text" name="theme" id="theme" minlength="1" maxlength="25" pattern="^[A-Za-z0-9-]*$" value="<%=theme.name%>" required>
            <button type="submit">Update</button>
        </form>
        <a href="/">Back</a>
    </body>
</html>