<html>
    <head>
        <title><%=title%></title>
    </head>
    <body>
        <h1><%=title%></h1>
        <div>
            <h2>Set Name:</h2>
            <p><%=set.setname%></p>
            <h2>Piece Count:</h2>
            <p><%=set.piececount%></p>
            <h2>Quantity:</h2>
            <p><%=set.qty%></p>
        </div>
        <a href="<%=set.id%>/update">Update</a>
        <div>
            <h2>Set Minifigs:</h2>
            <ul>
                <% minifigs.forEach(minifig => { %>
                    <li>
                        <h3><%= minifig.minifigname %></h3>
                        <p>Qty: <%=minifig.minifigqty%></p>
                    </li>
                <% }) %>
            </ul>
            <a href="<%=set.id%>/addMinifigs">Add Minifig</a>
        </div>
        <form action="<%=set.id%>/delete">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this set?')">Delete</button>
        </form>
        <a href="/<%=set.themeid%>/sets">Back</a>
    </body>
</html>