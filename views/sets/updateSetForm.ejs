<html>
    <head>
        <title><%=title%></title>
        <link rel="stylesheet" href="/headerStyles.css">
        <link rel="stylesheet" href="/sets/setFormStyles.css">
    </head>
    <body>
        <%- include('../partials/header.ejs') %>
        <main>
            <h1 class="title"><%=title%></h1>
            <div class="form-section">
                <%- include('../partials/errors.ejs') %>
                <form action="update" method="post" class="form">
                    <label for="name" class="form-label">Set Name:</label>
                    <input type="text" id="name" name="name" minlength="1" maxlength="40" value="<%=set.setname%>" required class="form name">
                    <label for="pieceCount" class="form-label">Piece Count:</label>
                    <input type="text" id="pieceCount" name="pieceCount" pattern="^\d*$" minlength="1" maxlength="5" value="<%=set.piececount%>" required class="form pc-count">
                    <label for="qty" class="form-label">Qty</label>
                    <input type="number" id="qty" name="qty" min="0" max="10000" value="<%=set.qty%>" required class="form qty">
                    <button type="submit" class="form-bttn">Update</button>
                </form>
            </div>
            <a href="/<%=set.themeid%>/sets/<%=set.id%>" class="back-lnk">Back</a>
        </main>
    </body>
</html>