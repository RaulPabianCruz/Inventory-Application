<html>
    <head>
        <title><%=title%></title>
    </head>
    <body>
        <h1><%=title%></h1>
        <ul>
            <% setMinifigs.forEach(minifig => { %>
                <li>
                    <div>
                        <h3><%=minifig.minifigname%></h3>
                        <form action="<%=minifig.minifigid%>/updateMinifigs" method="post">
                            <label for="qty">Qty:</label>
                            <input type="number" min="1" max="10" id="qty" name="qty" value="<%=minifig.minifigqty%>" required>
                            <button type="submit">Update</button>
                        </form>
                        <form action="<%=minifig.minifigid%>/delete" method="post">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this minifigure?')">Delete</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>
        <a href="/<%=set.themeid%>/sets/<%=set.id%>">Back</a>
    </body>
</html>