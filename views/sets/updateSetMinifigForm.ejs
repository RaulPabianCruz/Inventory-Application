<html>
    <head>
        <title><%=title%></title>
        <link rel="stylesheet" href="/headerStyles.css">
        <link rel="stylesheet" href="/sets/setMinifigUpdateFormStyles.css">
        <link rel="stylesheet" href="/errorStyles.css">
    </head>
    <body>
        <%- include('../partials/header.ejs') %>
        <main>
            <h1 class="title"><%=title%></h1>
            <div class="minifig section">
                <%- include('../partials/errors.ejs') %>
                    <h2 class="minifig heading">Set Minifigures</h2>
                <ul class="minifig list">
                    <% setMinifigs.forEach(minifig => { %>
                        <li class="minifig list-item">
                                <form action="updateMinifigs" method="post" class="update form">
                                    <div class="name section">
                                        <label for="name" class="form label">Name:</label>
                                        <input type="text" id="name" placeholder="<%=minifig.minifigname%>" readonly class="form input">
                                        <input type="text" name="minifigId" value="<%=minifig.minifigid%>" required hidden>
                                    </div>
                                    <div class="qty section">
                                        <label for="qty" class="form label">Qty:</label>
                                        <input type="number" min="0" max="10" id="qty" name="qty" value="<%=minifig.minifigqty%>" required class="form input">
                                    </div>
                                    <button type="submit" class="update-bttn">Update</button>
                                </form>
                                <form action="<%=minifig.minifigid%>/delete" method="post" class="delete form">
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this minifigure?')" class="delete-bttn">Delete</button>
                                </form>
                        </li>
                    <% }); %>
                </ul>
            </div>
            <a href="/<%=set.themeid%>/sets/<%=set.id%>" class="back-lnk">Back</a>
        </main>
    </body>
</html>