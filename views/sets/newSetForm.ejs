<html>
    <head>
        <title><%=title%></title>
    </head>
    <body>
      <h1><%=title%></h1>
      <%- include('../partials/errors.ejs') %>
      <form action="add" method="post">
        <label for="name">Set Name:</label>
        <input type="text" name="name" id="name" minlength="1" maxlength="40" required>
        <label for="pieceCount">Piece Count:</label>
        <input type="text" name="pieceCount" id="pieceCount" pattern="^\d*$" minlength="1" maxlength="5" required>
        <label for="qty">Qty:</label>
        <input type="number" name="qty" id="qty" min="0" max="10000" required>
        <button type="submit">Add</button>
      </form>
      <a href="/<%=themeId%>/sets">Back</a>
    </body>
</html>