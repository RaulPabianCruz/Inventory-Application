<html>
    <head>
        <title><%=title%></title>
        <link rel="stylesheet" href="/headerStyles.css">
        <link rel="stylesheet" href="/minifigs/minifigDetailsStyles.css">
    </head>
    <body>
        <%- include('../partials/header.ejs') %>
        <main>
            <h1 class="title"><%=title%></h1>
            <div class="minifig section">
                <div class="minifig info">
                    <div class="heading-section">
                        <h2 class="minifig heading">Name:</h2>
                    </div>
                    <div class="value-section">
                        <h3 class="minifig name"><%=minifig.name%></h3>
                    </div>
                    <div class="heading-section">
                        <h2 class="minifig heading">Theme:</h2>
                    </div>
                    <div class="value-section">
                        <h3 class="minifig theme"><%=theme.name%></h3>
                    </div>
                </div>
                <div class="minifig options">
                    <a href="<%=minifig.id%>/update" class="update-lnk">
                            Update
                    </a>
                    <form action="<%=minifig.id%>/delete" method="post" class="delete-form">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this Minifigure?')">Delete</button>
                    </form>
                </div>
            </div>
            <a href="/<%=theme.id%>/minifigs" class="back-lnk">Back</a>
        </main>
    </body>
</html>